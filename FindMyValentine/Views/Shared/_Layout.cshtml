@{
    Account curAcc = (Account)ViewData["Admin"];
    bool isAdmin = curAcc != null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Find My Valentine</title>
    <script type="importmap"></script>
    <link rel="icon" type="image/x-icon" href="~/imgs/favicon.png">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FindMyValentine.styles.css" asp-append-version="true" />
    <link href="~/lib/fontawesome-free-5.15.4-web/css/all.min.css" rel="stylesheet" />
    <link href="~/lib/DataTables/datatables.min.css" rel="stylesheet" />
    <link href="~/lib/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <style>
        @@font-face {
            font-family: 'LovelyValentine';
            src: url('/fonts/LovelyValentine.ttf');
        }

        .modal .close {
            background: transparent;
            border: 1px solid #CCC;
            border-radius: 20px;
            padding: 3px 10px;
            right: 10px;
            position: absolute;
            top: 10px;
        }

        .card {
            box-shadow: 0 25px 30px -13px rgba(40, 40, 40, 0.4);
            border-radius: 10px;
            padding-top: 30px;
            padding-bottom: 30px;
            -webkit-transform: translate3d(0, 0, 0);
            -moz-transform: translate3d(0, 0, 0);
            -o-transform: translate3d(0, 0, 0);
            -ms-transform: translate3d(0, 0, 0);
            transform: translate3d(0, 0, 0);
        }

            .card .content {
                padding: 20px;
            }

        .valentine-hint {
            position: relative;
            border: 1px solid pink;
            box-shadow: 0px 0px 8px #CCC;
            border-radius: 10px;
            padding: 10px;
            margin: 10px;
        }

            .valentine-hint img {
                height: 20px;
            }

            .valentine-hint .valentine-hint-message {
                font-family: cursive;
                font-size: 25px;
                text-align: center;
                margin-top: 20px;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="font-family: 'LovelyValentine'; font-size: 35px; ">
                    <img src="~/imgs/valentine_icon.svg" style="height:50px" />
                    Find My Valentine
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index"><i class="fa fa-home"></i> Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About"><i class="fa fa-info-circle"></i> About</a>
                        </li>

                        @if (isAdmin)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Matches" asp-action="Index"><i class="fa fa-heart"></i> Matches</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Users" asp-action="Index"><i class="fa fa-users"></i> Users</a>
                            </li>

                        }

                        <li class="nav-item" style="display:none">
                            <a class="nav-link" asp-area="" asp-controller="Users" asp-action="Login"><i class="fa fa-sign"></i> Login</a>
                        </li>
                        <li class="nav-item" style="display:none">
                            <a class="nav-link" asp-area="" asp-controller="Users" asp-action="AdminLogin"><i class="fa fa-sign-in-alt"></i> ALogin</a>
                        </li>

                        @if (ViewData["Admin"] != null || ViewData["User"] != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Users" asp-action="Logout"><i class="fa fa-sign-out-alt"></i> Logout</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - FindMyValentine - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/fontawesome-free-5.15.4-web/js/all.min.js"></script>
    <script src="~/lib/DataTables/datatables.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/sweetalert2/sweetalert2.all.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
